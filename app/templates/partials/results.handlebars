<div class="results">
    {{#if terms}}
        {{#if packages}}
        <ul class="packages results">
            {{#each packages}}
                <li class="package">
                    <h3><a href="{{url "package" name=name}}">{{highlight highlighted_name}}</a></h3>

                    <span class="author"><em>by</em> {{#multi_each authors highlighted_authors}}{{#if @index}}, {{/if}}<a href="{{url "author" name=value_1}}">{{highlight value_2}}{{/multi_each}}</a></span>
                    
                    {{>package_compat this}}
                    <span class="meta">
                        {{>package_badges this}}
                        {{>package_installs this}}
                    </span>
                    <div class="description">{{highlight highlighted_description}}</div>
                </li>
            {{/each}}
        </ul>
        {{/if}}

        {{#unless packages}}
        <div class="no results">
            No packages matched your search terms
        </div>
        {{/unless}}

        {{>pagination this}}
    {{else}}
        <div class="no results">
            Enter your search terms above
        </div>
    {{/if}}
</div>
