{{title name "Authors"}}

<a class="context" href="{{url "authors"}}">Authors</a>

<h1>{{name}}</h1>

<ul class="packages">
    {{#each packages}}
        <li class="package">
            <h3><a href="{{url "package" name=name}}">{{name}}</a></h3>

            {{>package_compat}}
            <span class="meta">
                {{>package_badges}}
                {{>package_installs}}
            </span>
            <div class="description">{{description}}</div>
        </li>
    {{/each}}
</ul>
